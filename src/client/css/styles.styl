@import url('https://fonts.googleapis.com/css?family=Roboto:700&display=swap');

escaque = 93%
sep_escaque = 7%
sep_cajas = 2%
margen_sup_caja = 1%
margen_tit_dim = 2%
sep_sup_titulo = 0

titulo = 10%

body
  background-color #f8f8f8

#pizarron
  font-family: 'Roboto', sans-serif;
  
  @media (min-width: 2060px)
    display grid
    grid-template-columns repeat(4, 1fr);
    .nombre-indicador
      font-size 0.7vw
    .caja-int-dimension
      grid-template-columns repeat(3, 1fr)
  @media (min-width: 1560px) and (max-width: 2060px)
    display grid
    grid-template-columns repeat(3, 1fr);
    .nombre-indicador
      font-size 1vw
    .caja-int-dimension
      grid-template-columns repeat(3, 1fr)
  @media (min-width: 1060px) and (max-width: 1560px)
    display grid
    grid-template-columns repeat(3, 1fr);
    .nombre-indicador
      font-size 1.4vw
    .caja-int-dimension
      grid-template-columns repeat(2, 1fr)
  @media (min-width: 720px) and (max-width: 1060px)
    display grid
    grid-template-columns repeat(2, 1fr);
    .nombre-indicador
      font-size 2vw
    .caja-int-dimension
      grid-template-columns repeat(2, 1fr)
  @media (min-width: 600px) and (max-width: 720px)
    display grid
    grid-template-columns repeat(1, 1fr);
    .nombre-indicador
      font-size 2.4vw
    .caja-int-dimension
      grid-template-columns repeat(3, 1fr)
  @media                         (max-width: 600px)
    display grid
    grid-template-columns repeat(1, 1fr);
    .nombre-indicador
      font-size 3.2vw
    .caja-int-dimension
      grid-template-columns repeat(2, 1fr)

  div
    x-border 1px solid gray
    x-border-radius 8px
  
  .nombre-dimension
    font-weight bold
  
  .nombre-indicador
    color white
    font-weight bold
    padding-left 5%
    padding-right (@padding-left / 2)
    padding-top 4%
    padding-bottom 3%
    min-height 30%
    x-background rgba(171,169,169,1)
    background linear-gradient(to bottom, rgba(171,169,169,1) 0%, rgba(171,169,169,0) 100%)
    x-background: linear-gradient(to bottom, rgba(171,169,169,1) 0%, rgba(171,169,169,0.32) 50%, rgba(171,169,169,0) 100%);
  
  .la-lista
    grid-column 2
    grid-row 1
    td
      min-height 28px
      height 28px
      vertical-align middle
      border-left 1px solid #e8e8e8
 
  tr:nth-child(even)
    td
      background-color #f0f0f0
  
  .titulo-dimension
    height titulo
    margin margen_tit_dim
    margin-bottom sep_sup_titulo
    margin-left 20px
    padding-top 6px
    overflow hidden
    font-size 28px
    x-color #666
    color #fefefe
  
  .caja-dimension
    overflow hidden
    margin (sep_cajas / 2)
    background-color #eee
    border-radius 10px
  
  .caja-int-dimension
    margin margen_sup_caja
    display grid
    align-items center
    justify-items center
  
  .caja-indicador-contenedor
    width 100%
    padding-bottom 100%
    position relative

  .caja-indicador
    left 0
    right 0
    top 0
    bottom 0
    position absolute
    overflow hidden
    margin (sep_escaque / 2)
    background-size contain
    background-repeat no-repeat
    background-position center 80%
    background-color #f8f8f8
    border-radius 10px

[id-dimension]
  grid-row auto
  
